<h1>Изменение задачи</h1>

<%= form_for(@task) do |f| %>

  <div class="field">
    Имя задачи:<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Суть:<br />
    <%= f.text_area :content %>
  </div>

  
  <div class="actions">
    <%= f.submit "Применить" %>
  </div>
<% end %>

<%= link_to 'Назад к проекту', @task.project %>
